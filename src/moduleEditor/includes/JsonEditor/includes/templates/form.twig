<div class="px2-form-input-list">
	<ul class="px2-form-input-list__ul">
		<li class="px2-form-input-list__li">
			<div class="px2-form-input-list__label"><label for="form-element--value">{{ title }}</label></div>
			<div class="px2-form-input-list__input">
				<textarea id="form-element--value" name="value" class="px2-input px2-input--block" style="height: 12em;">{{ value|e("html") }}</textarea>
			</div>
		</li>
	</ul>
</div>
